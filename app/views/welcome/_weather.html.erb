<div class="row">
    <div class="col-md-12 d-flex" style="height: 85vh;">
        <div class="well" style="height: 300px; background-color: white;">
            <h1>Forecast for <%= @location %>....</h1>
            <div class="row">
                <div class="col-md-7">
                    <p>
                        <em>What is the Weather like? </em>                    
                    </p>
                    <p>
                        Temp: <%= @temp %>F <br>
                        Cloud Cover: <%= @cloudiness %> % <br>
                        Wind: <%= @windiness %> mph
                    </p>
                </div><!-- end of col -->
                <div class="col-md-5">
                    <p>
                        <%= @weather_description.capitalize %>
                        <img src="http://openweathermap.org/img/wn/<%=@weather_icon %>@2x.png">
                    </p>
                </div><!-- end of col -->
            </div> <!--end of second row -->
        </div>
    </div>
</div> <!-- End of first row -->